{
  "version": "0.9.7",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "rm -rf dist && tsdx build",
    "test": "jest",
    "lint": "tsdx lint",
    "prepare": "ts-patch install -s && yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "generate:test": "rm -rf directory-test && npx create-next-app@latest directory-test --use-yarn --example 'https://github.com/vercel/next-learn/tree/master/basics/learn-starter'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@kanvas/core",
  "author": "Rogelio Morey",
  "module": "dist/core.esm.js",
  "size-limit": [
    {
      "path": "dist/core.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/core.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@apollo/client": "^3.10.8",
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "dotenv": "^16.4.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "size-limit": "^8.2.4",
    "ts-jest": "^29.1.5",
    "ts-patch": "^2.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@apollo/client": "^3.10.8",
    "axios": "^1.7.2",
    "form-data": "^4.0.0",
    "graphql": "^16.6.0",
    "typescript-transform-paths": "^3.4.6"
  }
}
